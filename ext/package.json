{
  "name": "cursor-agents",
  "displayName": "Agents",
  "description": "Manage multiple Claude Code, Codex, Gemini, and Cursor terminal agents in the editor",
  "version": "0.9.4",
  "icon": "assets/agents.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/muqsitnawaz/CursorAgents"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "agents.open",
        "title": "Run Agents",
        "icon": {
          "light": "assets/agents.png",
          "dark": "assets/agents.png"
        }
      },
      {
        "command": "agents.configure",
        "title": "Agents: Configure Counts"
      },
      {
        "command": "agents.newAgent",
        "title": "Agents: New Agent"
      },
      {
        "command": "agents.newClaudeCode",
        "title": "Agents: New Claude Code",
        "icon": {
          "light": "assets/claude.png",
          "dark": "assets/claude.png"
        }
      },
      {
        "command": "agents.newCodex",
        "title": "Agents: New Codex",
        "icon": {
          "light": "assets/chatgpt.png",
          "dark": "assets/chatgpt.png"
        }
      },
      {
        "command": "agents.newGemini",
        "title": "Agents: New Gemini Agent",
        "icon": {
          "light": "assets/gemini.png",
          "dark": "assets/gemini.png"
        }
      },
      {
        "command": "agents.newCursor",
        "title": "Agents: New Cursor Agent",
        "icon": {
          "light": "assets/cursor.png",
          "dark": "assets/cursor.png"
        }
      },
      {
        "command": "agents.setTitle",
        "title": "Agents: Label"
      },
      {
        "command": "agents.reload",
        "title": "Agents: Reload"
      },
      {
        "command": "agents.generateCommit",
        "title": "Agents: Generate Commit",
        "icon": "$(git-commit)"
      }
    ],
    "configuration": {
      "title": "Agents",
      "properties": {
        "agents.claudeCount": {
          "type": "number",
          "default": 2,
          "minimum": 0,
          "maximum": 10,
          "description": "Number of Claude Code terminal tabs to open"
        },
        "agents.codexCount": {
          "type": "number",
          "default": 2,
          "minimum": 0,
          "maximum": 10,
          "description": "Number of Codex terminal tabs to open"
        },
        "agents.geminiCount": {
          "type": "number",
          "default": 2,
          "minimum": 0,
          "maximum": 10,
          "description": "Number of Gemini terminal tabs to open"
        },
        "agents.cursorCount": {
          "type": "number",
          "default": 2,
          "minimum": 0,
          "maximum": 10,
          "description": "Number of Cursor terminal tabs to open"
        },
        "agents.customAgents": {
          "type": "array",
          "default": [],
          "description": "Custom agent configurations",
          "items": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string",
                "description": "Display title for the agent (e.g., 'GC' for Gemini CLI)"
              },
              "command": {
                "type": "string",
                "description": "Terminal command to run (e.g., 'gemini-cli')"
              },
              "count": {
                "type": "number",
                "default": 1,
                "minimum": 0,
                "maximum": 10,
                "description": "Number of terminal instances to open on startup"
              },
              "iconPath": {
                "type": "string",
                "description": "Optional: Path to custom icon relative to extension root (defaults to assets/agents.png)"
              }
            },
            "required": [
              "title",
              "command",
              "count"
            ]
          }
        },
        "agents.autoStart": {
          "type": "boolean",
          "default": false,
          "description": "Automatically open configured agents on workspace startup"
        },
        "agents.defaultAgent": {
          "type": "string",
          "default": "claude",
          "enum": [
            "claude",
            "codex",
            "gemini",
            "cursor"
          ],
          "enumDescriptions": [
            "Claude Code (Anthropic)",
            "Codex (OpenAI)",
            "Gemini (Google)",
            "Cursor Agent"
          ],
          "description": "Default agent type for 'Agents: New Agent' command"
        },
        "agents.provider": {
          "type": "string",
          "default": "openai",
          "description": "API provider for commit message generation (openai, openrouter, or custom OpenAI-compatible endpoint URL)"
        },
        "agents.model": {
          "type": "string",
          "default": "gpt-4o-mini",
          "description": "Model to use for commit message generation"
        },
        "agents.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for the provider"
        },
        "agents.autoPush": {
          "type": "boolean",
          "default": true,
          "description": "Automatically push after committing"
        },
        "agents.commitMessageExamples": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "Example commit messages to guide the AI style"
        },
        "agents.ignoreFiles": {
          "type": "string",
          "default": "node_modules,dist,build,out,.git,*.lock,bun.lock,package-lock.json",
          "description": "Comma-separated patterns of files to ignore in diffs"
        }
      }
    },
    "menus": {
      "editor/title": [
        {
          "command": "agents.open",
          "group": "navigation",
          "when": "true"
        }
      ],
      "scm/title": [
        {
          "command": "agents.generateCommit",
          "group": "navigation",
          "when": "scmProvider == git"
        }
      ],
      "commandPalette": [
        {
          "command": "agents.newGemini",
          "when": "true",
          "group": "navigation@2"
        }
      ]
    },
    "keybindings": [
      {
        "command": "agents.generateCommit",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g"
      },
      {
        "command": "agents.newAgent",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a"
      },
      {
        "command": "agents.setTitle",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l",
        "when": "terminalEditorFocus"
      },
      {
        "command": "agents.reload",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "terminalEditorFocus"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.3"
  }
}
