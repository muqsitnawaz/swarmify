{
  "name": "cursor-agents",
  "displayName": "Agents",
  "description": "Manage multiple Claude Code, Codex, Gemini, and Cursor terminal agents in the editor",
  "version": "0.9.28",
  "icon": "assets/agents.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/muqsitnawaz/CursorAgents"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configurationDefaults": {
      "terminal.integrated.confirmOnKill": "panel"
    },
    "commands": [
      {
        "command": "agents.open",
        "title": "Run Agents",
        "icon": {
          "light": "assets/agents.png",
          "dark": "assets/agents.png"
        }
      },
      {
        "command": "agents.configure",
        "title": "Agents: Settings"
      },
      {
        "command": "agents.newAgent",
        "title": "Agents: New"
      },
      {
        "command": "agents.newClaude",
        "title": "Agents: New Claude",
        "icon": {
          "light": "assets/claude.png",
          "dark": "assets/claude.png"
        }
      },
      {
        "command": "agents.newCodex",
        "title": "Agents: New Codex",
        "icon": {
          "light": "assets/chatgpt.png",
          "dark": "assets/chatgpt.png"
        }
      },
      {
        "command": "agents.newGemini",
        "title": "Agents: New Gemini",
        "icon": {
          "light": "assets/gemini.png",
          "dark": "assets/gemini.png"
        }
      },
      {
        "command": "agents.newCursor",
        "title": "Agents: New Cursor",
        "icon": {
          "light": "assets/cursor.png",
          "dark": "assets/cursor.png"
        }
      },
      {
        "command": "agents.setTitle",
        "title": "Agents: Label"
      },
      {
        "command": "agents.clear",
        "title": "Agents: Clear"
      },
      {
        "command": "agents.generateCommit",
        "title": "Agents: Git",
        "icon": {
          "light": "assets/agents.png",
          "dark": "assets/agents.png"
        }
      },
      {
        "command": "agents.enableSwarm",
        "title": "Agents: Enable Swarm"
      }
    ],
    "configuration": {
      "title": "Agents: Git",
      "properties": {
        "agents.apiKey": {
          "type": "string",
          "default": "",
          "description": "Your OpenAI API key"
        },
        "agents.commitMessageExamples": {
          "type": "array",
          "default": [
            "feat: add user authentication with jwt tokens",
            "fix: resolve null pointer exception in payment handler",
            "docs: update api reference for v2 endpoints",
            "build: configure webpack for production optimization",
            "refactor: extract validation logic into separate module",
            "fix: correct timezone handling in date formatter",
            "feat: implement real-time notifications via websockets",
            "release: bump version to 1.2.0 for stable release",
            "refactor: simplify error handling in api client",
            "docs: add examples for configuration options"
          ],
          "items": {
            "type": "string"
          },
          "description": "Example commit messages to guide the AI style"
        },
        "agents.ignoreFiles": {
          "type": "string",
          "default": "node_modules,dist,build,out,.git,*.lock,bun.lock,package-lock.json",
          "description": "Comma-separated patterns of files to ignore in diffs"
        }
      }
    },
    "menus": {
      "editor/title": [
        {
          "command": "agents.open",
          "group": "navigation",
          "when": "true"
        }
      ],
      "scm/title": [
        {
          "command": "agents.generateCommit",
          "group": "navigation",
          "when": "scmProvider == git"
        }
      ],
      "commandPalette": [
        {
          "command": "agents.newGemini",
          "when": "true",
          "group": "navigation@2"
        }
      ]
    },
    "keybindings": [
      {
        "command": "agents.generateCommit",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g"
      },
      {
        "command": "agents.newAgent",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a"
      },
      {
        "command": "agents.setTitle",
        "key": "ctrl+l",
        "mac": "cmd+l"
      },
      {
        "command": "agents.clear",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./ && cd ui && bun run build",
    "compile:ext": "tsc -p ./",
    "compile:ui": "cd ui && bun run build",
    "watch": "tsc -watch -p ./",
    "package": "bun run compile && vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.4.0"
  }
}
